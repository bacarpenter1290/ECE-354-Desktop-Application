package database;

import java.sql.*;

public class Database {
	
	private final String dBUser = "OnlineShoppingApp";
	private final String dBPass = "eSGDm43ZU6bGz9w";
	public void test() {
		try {
			Class.forName("com.mysql.cj.jdbc.Driver");
			Connection conn = DriverManager.getConnection(
					"jdbc:mysql://localhost:3306/sonoo", dBUser, dBPass);
			
			Statement stmt = conn.createStatement();
			ResultSet rs = stmt.executeQuery("select * from coconinodatabase.bankaccounts");
			while(rs.next())
				System.out.println(rs.getInt(1)+"  "+rs.getString(2)+"  "+rs.getString(3));  
			conn.close();  
		}
		catch(Exception e){ System.out.println(e);}  
	}
}
